@model MVCExample.Models.ViewModel.BasketViewModel

@{
    ViewData["Title"] = "Basket";
}

<h2>Basket</h2>

<table class="table">
    <thead>
        <tr>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.BasketItems) {
        <tr>

            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>£@item.Price</td>
            <td>@item.ProductType.Name</td>

            <td> <form asp-controller="Basket" asp-action="Remove" method="post">  <input type="hidden" name="id" value="@item.ProductId" /> <button type="submit" class="btn btn-sm btn-danger">Remove from basket</button></form></td>


        </tr>
}
    </tbody>
</table>
